<%= form_with(model: balance, url: balance, id: form_id) do |f| %>
    <%= hidden_field_tag :form_id, form_id %>
    <%= render_form_errors balance %>
    <div>
        <%= f.label :reference, class: 'block mb-2 text-sm font-medium text-stone-900 dark:text-white' %>
        <%= f.text_field :reference, class: 'bg-stone-50 border border-stone-300 text-stone-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-stone-700 dark:border-stone-600 dark:placeholder-stone-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500', placeholder: Faker::Commerce.promotion_code, required: true %>
    </div>
    <div>
        <%= f.label :amount, class: 'block mb-2 text-sm font-medium text-stone-900 dark:text-white' %>
        <%= f.number_field :amount, value: f.object.amount.zero? ? nil : number_to_currency(f.object.amount.to_f, delimiter: '', unit: ''), step: :any, class: 'bg-stone-50 border border-stone-300 text-stone-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-stone-700 dark:border-stone-600 dark:placeholder-stone-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500', placeholder: number_to_currency(0.0, delimiver: '', unit: ''), required: true %>
    </div>
    <div class="space-x-2">
        <%= f.button 'Add balance', type: 'submit', class: 'px-5 py-2.5 mt-4 text-sm font-medium text-center text-white bg-rose-700 rounded-lg focus:ring-4 focus:ring-rose-200 dark:focus:ring-rose-900 hover:bg-rose-800' %>
        <%= link_to 'Cancel', portfolio_path, class: 'py-2.5 px-5 mr-2 text-sm font-medium text-stone-900 focus:outline-none bg-white rounded-lg border border-stone-200 hover:bg-stone-100 hover:text-rose-700 focus:z-10 focus:ring-4 focus:ring-stone-200 dark:focus:ring-stone-700 dark:bg-stone-800 dark:text-stone-400 dark:border-stone-600 dark:hover:text-white dark:hover:bg-stone-700' %>
    </div>    
<% end %>
