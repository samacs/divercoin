<%= turbo_frame_tag :flash_messages do %>
    <% if flash.any? %>
        <div class="absolute left-0 right-0 w-full mx-auto max-w-lg pt-8" data-controller="flash-messages">
            <% flash.each_with_index do |(type, message), index| %>
                <div id="alert-<%= type %>-<%= index %>" class="flex items-center p-4 mb-4 rounded-lg dark:bg-gray-800 <%= flash_message_color(type, :background) %>" role="alert" data-flash-messages-target="message">
                    <%= icon('info-circle', class: 'flex-shrink-0 w-4 h-4 fill-none') %>
                    <span class="sr-only"><%= t(type) %></span>
                    <div class="ml-3 text-sm font-medium">
                        <%= message %>
                    </div>
                    <button type="button" class="ml-auto -mx-1.5 -my-1.5 rounded-lg focus:ring-2 p-1.5 inline-flex items-center justify-center h-8 w-8 dark:bg-gray-800 dark:hover:bg-gray-700" data-flash-messages-id-param="alert-<%= type %>-<%= index %>" data-action="click->flash-messages#dismiss" aria-label="Close">
                        <span class="sr-only">Close</span>
                        <%= icon('xmark', class: 'w-3 h-3 fill-none stroke-current') %>
                    </button>
                </div>
            <% end %>
        </div>
    <% end %>
<% end %>
